{
  "name": "csv_mail",
  "version": "1.0.0",
  "description": "Test script for connecting to an IMAP server and extracting CSV-Files in order to further process and persist those",
  "main": "build/index.js",
  "scripts": {
    "build": "rm -rf ./build && npx tsc",
    "start:dev": "npx ts-node -r dotenv/config src/index.ts",
    "start": "npm run build && node build/index.js",
    "lint": "npx eslint src/**/*.ts",
    "lint:fix": "npx eslint --fix src/**/*.ts",
    "prettier": "npx prettier --config .prettierrc 'src/**/*.ts'",
    "prettier:write": "npx prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier:watch": "npx onchange 'src/**/*.ts' -- npx prettier --write {{changed}}"
  },
  "author": "Katharina Borys/Giulia Winterhoff",
  "license": "MIT",
  "devDependencies": {
    "@types/base64-stream": "^1.0.0",
    "@types/convict": "^5.2.1",
    "@types/imap-simple": "^4.2.4",
    "@types/node": "^14.14.10",
    "@types/pg": "^7.14.7",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "dotenv": "^8.2.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "onchange": "^7.1.0",
    "prettier": "^2.2.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "convict": "^6.0.0",
    "data-forge": "^1.8.12",
    "iconv-lite": "^0.6.2",
    "imap-simple": "^5.0.0",
    "pg": "^8.5.1"
  }
}
